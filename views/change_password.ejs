<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Certificate Verification QR Generator - Log In</title>
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/css/change_password.css" />
  </head>
  <body>
    <div class="container">
      <div
        class="container header-container d-flex align-items-center position-relative"
      >
        <a href="/" class="position-absolute start-0">
          <i class="fa-solid fa-circle-chevron-left" id="back-signin"></i>
        </a>
        <img
          class="img-fluid mx-auto d-block"
          src="/images/DICT BANNER LOGO.png"
          alt="DICT Logo"
        />
      </div>
      <!-- Success Message -->
      <% if (success) { %>
      <div class="alert alert-success text-center mt-5" id="success-message">
        <%= success %>
      </div>
      <script>
        setTimeout(function () {
          window.location.href = "/home"; // Redirect after 3 seconds
        }, 2000);
      </script>
      <% } %>
      <!-- errors Message -->
      <% if (errors?.error) { %>
      <div class="alert alert-danger text-center mt-5">
        <%= errors.error %>
      </div>
      <% } %>
      <form action="/change_password" method="post" class="mt-5">
        <div class="input-container">
          <div class="input-wrapper">
            <i class="fa fa-key icon"></i>
            <input
              class="input-field"
              type="password"
              placeholder="Current Password"
              name="current_password"
              id="current_password"
              value="<%= admin?.current_password || '' %>"
            />
            <i class="fa fa-eye toggle-password" data-target="current_password"></i>
          </div>
          <% if (errors?.current_password) { %>
            <p class="mt-1 medium text-danger align-errors">
              <%= errors.current_password %>
            </p>
            <% } %>
        </div>
        
        <div class="input-container">
          <div class="input-wrapper">
            <i class="fa fa-key icon"></i>
            <input
              class="input-field"
              type="password"
              placeholder="New Password"
              name="new_password"
              id="new_password"
              value="<%= admin?.new_password || '' %>"
            />
            <i class="fa fa-eye toggle-password" data-target="new_password"></i>
          </div>
          <% if (errors?.new_password) { %>
            <p class="mt-1 medium text-danger align-errors">
              <%= errors.new_password %>
            </p>
            <% } %>
        </div>
        
        <div class="input-container">
          <div class="input-wrapper">
            <i class="fa fa-key icon"></i>
            <input
              class="input-field"
              type="password"
              placeholder="Confirm New Password"
              name="confirm_new_password"
              id="confirm_new_password"
              value="<%= admin?.confirm_new_password || '' %>"
            />
            <i class="fa fa-eye toggle-password" data-target="confirm_new_password"></i>
          </div>
          <% if (errors?.confirm_new_password) { %>
            <p class="mt-1 medium text-danger align-errors">
              <%= errors.confirm_new_password %>
            </p>
            <% } %>
        </div>
        
        <div class="btn-container">
          <button type="submit" class="btn">Change Password</button>
        </div>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/0719113f1e.js"
      crossorigin="anonymous"
    ></script>
    <script>
      document.querySelectorAll(".toggle-password").forEach((eyeIcon) => {
        eyeIcon.addEventListener("click", function () {
          let passwordField = document.getElementById(this.dataset.target);
          if (passwordField.type === "password") {
            passwordField.type = "text";
            this.classList.remove("fa-eye");
            this.classList.add("fa-eye-slash");
          } else {
            passwordField.type = "password";
            this.classList.remove("fa-eye-slash");
            this.classList.add("fa-eye");
          }
        });
      });
    </script>
    
  </body>
</html>
